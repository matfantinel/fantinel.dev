---
import BlogArchiveLayout from "@layouts/BlogArchiveLayout.astro";
import { getAllCategories, getPaginatedBlogPosts } from "@data/blogPosts";

export async function getStaticPaths() {
  const categories = await getAllCategories();
  
  const paths = await Promise.all(
    categories.map(async (category) => {
      const { totalPages } = await getPaginatedBlogPosts(1, category.slug);
      return Array.from({ length: totalPages }).map((_, i) => ({
        params: { category: category.slug, page: String(i + 2) }, // start at page 2
      }));
    })
  );

  return paths.flat();
}

const { category, page } = Astro.params;
const { posts, currentPage, totalPages, totalPosts } = await getPaginatedBlogPosts(Number(page), category);

const allCategories = await getAllCategories();
const currentCategory = allCategories.find((c) => c.slug === category);
---

<BlogArchiveLayout
  posts={posts}
  currentPage={currentPage}
  totalPages={totalPages}
  totalPosts={totalPosts}
  currentCategory={currentCategory}
  allCategories={allCategories}
/>
