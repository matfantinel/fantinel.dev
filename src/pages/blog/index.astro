---
import { getCategoryFilters, getDateFilters, getPaginatedBlogPosts } from "@data/blogPosts";
import BlogArchiveLayout from "@layouts/BlogArchiveLayout.astro";

const { posts, currentPage, totalPages, totalPosts } = await getPaginatedBlogPosts(1);
const categoryFilters = await getCategoryFilters();
const dateFilters = await getDateFilters();
---

<BlogArchiveLayout
  posts={posts}
  currentPage={currentPage}
  totalPages={totalPages}
  totalPosts={totalPosts}
  categoryFilters={categoryFilters}
  dateFilters={dateFilters}
/>