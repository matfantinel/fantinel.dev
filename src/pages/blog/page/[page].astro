---
import BlogArchiveLayout from "@layouts/BlogArchiveLayout.astro";
import { getCategoryFilters, getDateFilters, getPaginatedBlogPosts } from "@data/blogPosts";

export async function getStaticPaths() {
  const { totalPages } = await getPaginatedBlogPosts(1); // Just to get count

  return Array.from({ length: totalPages }).map((_, i) => ({
    params: { page: String(i + 2) }, // start at page 2
  }));
}

const { page } = Astro.params;
const { posts, currentPage, totalPages, totalPosts } = await getPaginatedBlogPosts(Number(page));

const categoryFilters = await getCategoryFilters();
const dateFilters = await getDateFilters();
---

<BlogArchiveLayout
  posts={posts}
  currentPage={currentPage}
  totalPages={totalPages}
  totalPosts={totalPosts}
  categoryFilters={categoryFilters}
  dateFilters={dateFilters}
/>
