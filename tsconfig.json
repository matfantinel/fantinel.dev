{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@markdown/*": ["src/markdown/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@styles/*": ["src/styles/*"],
      "@schemas/*": ["src/schemas/*"],
      "@public/*": ["public/*"]
    }
  }
}
